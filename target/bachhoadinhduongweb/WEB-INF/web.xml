<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee, http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--declare user servlet class-->
    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>com.finalproject.controller.userController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartController</servlet-name>
        <servlet-class>com.finalproject.controller.cartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>invoiceController</servlet-name>
        <servlet-class>com.finalproject.controller.invoiceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <!--declare login servlet class-->
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.finalproject.controller.loginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--declare register  servler class-->
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>com.finalproject.controller.registerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--declare product servlet class-->
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.finalproject.controller.productController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>invoiceController</servlet-name>
        <url-pattern>/invoice</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <!--make the first website-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>